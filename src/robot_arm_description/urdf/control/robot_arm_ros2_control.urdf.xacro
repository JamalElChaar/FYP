<?xml version="1.0" ?>
<robot xmlns:xacro="http://wiki.ros.org/xacro">

    <!-- ESP32 Connection Parameters (set these to match your setup) -->
    <xacro:property name="esp32_ip" value="172.20.10.4"/>
    <xacro:property name="esp32_port" value="5000"/>
    <xacro:property name="use_simulation" value="false"/>

    <xacro:macro name="robot_arm_ros2_control" params="prefix flange_link use_gazebo">
        <ros2_control name="RobotSystem" type="system">
            <hardware>
                <xacro:if value="${use_gazebo}">
                    <plugin>gz_ros2_control/GazeboSimSystem</plugin>
                </xacro:if>
                <xacro:unless value="${use_gazebo}">
                    <plugin>custom_hardware/CustomHardwareInterface</plugin>
                    <!-- ESP32 WiFi/TCP connection parameters -->
                    <param name="esp32_ip">${esp32_ip}</param>
                    <param name="esp32_port">${esp32_port}</param>
                    <param name="timeout_ms">100</param>
                    <param name="use_simulation">${use_simulation}</param>
                </xacro:unless>
            </hardware>

            <!-- Joint 1: Base to Link 1 -->
            <joint name="joint_1">
                <command_interface name="position"/>
                <state_interface name="position"/>
                <state_interface name="velocity"/>
            </joint>

            <!-- Joint 2: Link 1 to Link 2 -->
            <joint name="joint_2">
                <command_interface name="position"/>
                <state_interface name="position"/>
                <state_interface name="velocity"/>
            </joint>

            <!-- Joint 3: Link 2 to Link 3 -->
            <joint name="joint_3">
                <command_interface name="position"/>
                <state_interface name="position"/>
                <state_interface name="velocity"/>
            </joint>

            <!-- Joint 4: Link 3 to Link 4 -->
            <joint name="joint_4">
                <command_interface name="position"/>
                <state_interface name="position"/>
                <state_interface name="velocity"/>
            </joint>

            <!-- Joint 5: Link 4 to Link 5 -->
            <joint name="joint_5">
                <command_interface name="position"/>
                <state_interface name="position"/>
                <state_interface name="velocity"/>
            </joint>

            <!-- Joint 6: Link 5 to Link 6 (End Effector) -->
            <joint name="joint_6">
                <command_interface name="position"/>
                <state_interface name="position"/>
                <state_interface name="velocity"/>
            </joint>

        </ros2_control>
    </xacro:macro>

</robot>
